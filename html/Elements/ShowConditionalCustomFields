    var conditionedby_id = <% 'CF-' . $conditioned_by->{CF} . '-ShowRow' |h,n,j%>;
    conditionedby_id = conditionedby_id.replace(/:/g,'\\:');
    var cf_id = <% 'CF-' . $CustomField->id . '-ShowRow' |h,n,j%>;
